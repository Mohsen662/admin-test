<section id="sign-up">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control custom-form' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control custom-form' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, class: 'check-box' %>
              <%= f.label :remember_me, class: 'check-box-label' %>
            </div>
          <% end -%>

          <%= f.submit "Log in", class: 'btn-custom' %>

        <% end %>
        <br>
        <h2>Don't have an account yet?<%= render "devise/shared/links" %></h2>
      </div>
    </div>
  </div>
</section>

