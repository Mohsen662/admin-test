<section id="tutorials">
  <h1 class="current-category"><%= params[:category] %></h1>
  <% if @tutorials.count == 0 %>
    <h3>There are no tutorials in this category</h3>
  <% else %> 
    <div class="row">
      <% @tutorials.each do |tutorial| %>
        <div class="container">        
          <div class="col-md-6">        
            <%= image_tag tutorial.tutorial_img.url(:tutorial_index), class: "img-responsive show-img" %>
          </div>
          <div class="col-md-6">              
            <h2><%= truncate(tutorial.content, length: 300) %></h2>
            <%= link_to 'Read More', tutorial_path(tutorial), class: "btn-info" %>
          </div>
        </div>
        <hr> 
      <% end %>
    </div>
  <% end %> <!-- END ELSE -->
</section>