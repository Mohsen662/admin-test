<div class="row">
  <div class="col-md-4">
    <%= image_tag @tutorial.tutorial_img.url(:tutorial_show), class: "tutorial-show" %>
  </div>
  <div class="col-md-8">
    <div class="tutorial-info">
      <h2 class="tutprial-title"><%= @tutorial.title %></h2>
      <span class="tutorial-category">category: <em><%= @tutorial.category.name %></em></span><hr>
      <p class="tutorial-decs"><%= @tutorial.content %></p>
    </div>

    <div class="links btn-group">
      <% if logged_in? && current_user.admin? %>
        <%= link_to 'Edit this tutorial', edit_tutorial_path(@tutorial), class: 'btn btn-xs btn-primary' %>
        <%= link_to 'Delete this tutorial', tutorial_path(@tutorial), method: :delete, data: { confirm: "Are you sure you want to delete this tutorial?" }, class: 'btn btn-xs btn-danger' %>
      <% end %>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="reviews">
          <h1>Reviews </h1>
          <%= render @tutorial.reviews %>
          <div align="center">
            <%= link_to "Add Reviews", new_tutorial_review_path(@tutorial), class: "btn-custom" %>
          </div>
        </div>
      </div>
    </div>

    
  </div>
</div>



